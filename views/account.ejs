<% include header %>
    <div class="main flexV">
        <% include mastHead %>
        <div class="medBlank"></div>
        <div class="container flexV">
            <div class="flexVL translucentBG formContainer" id="account">
                <div class="profileItem sizeUp">Name: <%= data.name %></div>
                <div class="profileItem sizeUp">Email: <%= data.email %></div>
                <div class="smlBlank"></div>
                <div class="profileItem sizeUp">Change password:</div>            
                <label for="oldPassword" class="formLabel">Old password:</label>
                <input class="formInput" type="password" name="oldPassword" id="oldPassword">
                <label for="newPassword" class="formLabel">New password:</label>
                <input class="formInput" type="password" name="newPassword" id="newPassword">
                <label for="newPassword2" class="formLabel">Confirm new password:</label>
                <input class="formInput" type="password" name="newPassword2" id="newPassword2">
                <div class="smlBlank"></div>
                <button class="buttons" id="savePassButton">Save</button>
            </div>
            <div class="messages" id="savePassMsg" style="display: none"></div>
        </div>
        <div class="medBlank"></div>
    </div>
    <script src="/javascripts/account.js"></script>

<% include footer %>